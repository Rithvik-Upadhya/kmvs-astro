---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<section id='title'>
	<div class='container'>
		<h1>{title}</h1>
	</div>
</section>

<style lang='less'>
	@import '../../styles/variables.less';
	#title {
		.container {
			width: 100%;
			background-position: top center;
			background-repeat: no-repeat;

			@media @s-d {
				padding-top: 14%;
				padding-bottom: 50px;
				background-image: url('/images/decor/border-top-2000w.png');
				background-size: calc(100% - 100px);
			}
			@media @s-t {
				padding-top: 16%;
				padding-bottom: 50px;
				background-image: url('/images/decor/border-top-1400w.png');
				background-size: calc(100% - 100px);
			}
			@media @s-m {
				padding-top: 28%;
				padding-bottom: 50px;
				background-image: url('/images/decor/border-top-1000w.png');
				background-size: calc(100% - 50px);
			}
			h1 {
				width: clamp(300px, calc(100% - 100px), 550px);
				color: var(--secondaryC);
				text-align: center;
				margin: auto auto 0 auto;
				@media @s-d {
					font-size: 2.4em;
				}
				@media @s-t {
					font-size: 2em;
				}
				@media @s-m {
					font-size: 1.6em;
				}
			}
		}
	}
</style>
