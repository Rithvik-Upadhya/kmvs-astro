---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<section id='title'>
	<div class='container'>
		<div class='border-top'></div>
		<h1>{title}</h1>
		<div class='border-bottom'></div>
	</div>
</section>

<style lang='less'>
	@import '../../styles/variables.less';
	#title {
		.container {
			width: 100%;
			.border-top {
				width: 100%;
				background-position: top center;
				background-repeat: no-repeat;
				background-size: 100%;

				@media @s-d {
					padding-top: 24%;
					background-image: url('/images/decor/border-top-2000w.png');
				}
				@media @s-t {
					padding-top: 30%;
					background-image: url('/images/decor/border-top-1400w.png');
				}
				@media @s-m {
					padding-top: 50%;
					background-image: url('/images/decor/border-top-1000w.png');
				}
			}
			.border-bottom {
				width: 100%;
				background-position: center;
				background-repeat: no-repeat;
				background-size: 100%;
				height: 50px;
				filter: var(--accentC1Filter);
				transform: translateY(-25px);

				@media @s-d {
					background-image: url('/images/decor/title-separator-2000w.png');
				}
				@media @s-t {
					background-image: url('/images/decor/title-separator-1400w.png');
				}
				@media @s-m {
					background-image: url('/images/decor/title-separator-1000w.png');
				}
			}
			h1 {
				width: clamp(300px, calc(100% - 100px), 550px);
				color: var(--textC1);
				text-align: center;
				margin: auto auto 0 auto;
				transform: translateY(calc(-1 * var(--lineHeight)));
				@media @s-d {
					font-size: 2.4em;
				}
				@media @s-nd {
					font-size: 2.1em;
				}
			}
		}
	}
</style>
