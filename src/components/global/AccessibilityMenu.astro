			background-color: transparent;
			padding: 0;
			margin: 0;
			.AUIicon {
				position: relative;
				width: 40px;
				height: 40px;
				img {
					position: absolute;
					width: 100%;
					left: 0;
					top: 0;
					&:first-child {
						filter: var(--primaryFilter);
					}
					&:last-child {
						filter: var(--primaryFilter);
					}
				}
			}
		}
		.AUImenu {
			width: 240px;
			.AUIcontrols {
				display: flex;
				flex-direction: row;
				justify-content: flex-start;
				gap: 15px;
				visibility: hidden;
				transition: visibility 0s ease 0.5s;
				ul {
					display: flex;
					flex-direction: row;
					border: 2px solid var(--lightTint);
