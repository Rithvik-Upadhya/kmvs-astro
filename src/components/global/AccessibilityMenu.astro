						}
					}
					li:last-child {
						button {
							border-radius: 0 var(--bdRadius2) var(--bdRadius2) 0;
						}
					}
					button {
						padding: 8px 12px;
						font-weight: 500;
						background-color: var(--primaryC);
						&:hover,
						&:focus {
							position: relative;
							outline: 2px solid var(--accessibilityC);
						}
						&.darkTheme {
							background-color: #000000;
							color: var(--accessibilityC);
						}
					}
				}
			}
		}
	}
