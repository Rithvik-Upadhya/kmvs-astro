---
import MainNav from './MainNav.astro';
import AccessibilityMenu from './AccessibilityMenu.astro';
const logo = '/images/logo.svg';
---

<header>
	<a
		class='skip-link screen-reader-text'
		href='#content'
		role='link'
		title='Skip to content'>
		Skip to content
	</a>
	<div class='nav-wrapper desktop'>
		<MainNav {logo} />
	</div>
	<div class='nav-wrapper mobile'>
		<div class='h-logo'>
			<a href='/'>
				<img src={logo} width='60' alt='Home Page' loading='eager' />
			</a>
		</div>
		<button
			class='open-flyout'
			aria-controls={`flyout`}
			aria-expanded='false'
			aria-label='open menu'>
			<img src='/images/components/hamburger_1.png' alt='' />
			<img src='/images/components/hamburger_2.png' alt='' />
		</button>
		<div id='flyout' tabindex='-1'>
			<button class='close-flyout' aria-label='close menu'>✕</button>
			<MainNav />
			<img
				class='flyout_cranes'
				src='/images/decor/flyout_cranes_800w.png'
				alt='illustrated cranes'
				loading='lazy'
			/>
		</div>
	</div>
	<AccessibilityMenu />
</header>

<script>
	// skip link
	const skipLink = document.querySelector('.skip-link') as HTMLElement;
	skipLink.addEventListener('click', scrollToContent);
	function scrollToContent(event: Event) {
		event.preventDefault();
		const content = document.querySelector('#content') as HTMLElement;
		const offset = content.offsetTop;

		content.focus();

		window.scrollTo({
			top: offset,
			behavior: 'smooth',
		});
	}

	// sticky header function //
	let lastScrollTop = 0;
	// set classes on header based on scroll position and direction
	window.addEventListener('scroll', () => {
		let scrollTop = window.scrollY;
		const header = document.querySelector('header');

		scrollTop > 0
			? header.classList.add('scrolling')
			: header.classList.remove('scrolling');

		scrollTop > 300
			? header.classList.add('auto-hide')
			: header.classList.remove('auto-hide');

		if (scrollTop > lastScrollTop && scrollTop > 300) {
			header.classList.remove('up');
			header.classList.add('down');
		} else if (scrollTop < lastScrollTop && scrollTop > 300) {
			header.classList.remove('down');
			header.classList.add('up');
		} else {
			header.classList.remove('up');
			header.classList.remove('down');
		}
		lastScrollTop = scrollTop;
	});

	document.addEventListener(
		'DOMContentLoaded',
		function () {
			let scrollTop = window.scrollY;
			const header = document.querySelector('header');

			scrollTop > 0
				? header.classList.add('scrolling')
				: header.classList.remove('scrolling');

			scrollTop > 300
				? header.classList.add('auto-hide')
				: header.classList.remove('auto-hide');
		},
		false
	);

	// mobile menu open and close //
	const mobileNavWrapper = document.querySelector(
			'.nav-wrapper.mobile'
		) as HTMLElement,
		flyout = mobileNavWrapper.querySelector('#flyout') as HTMLElement,
		openFlyoutBtn = mobileNavWrapper.querySelector(
			'.open-flyout'
		) as HTMLElement,
		closeFlyoutBtn = flyout.querySelector('.close-flyout') as HTMLElement;
	// open and close buttons
	openFlyoutBtn.addEventListener('click', event => {
		event.preventDefault();

		mobileNavWrapper.classList.add('open');
		openFlyoutBtn.setAttribute('aria-expanded', 'true');
		flyout.focus();
		document.body.style.overflow = 'hidden';
	});
	closeFlyoutBtn.addEventListener('click', event => {
		event.preventDefault();
		mobileNavWrapper.classList.remove('open');
		openFlyoutBtn.setAttribute('aria-expanded', 'false');
		openFlyoutBtn.focus();
		document.body.style.overflow = 'auto';
	});
	// close on focus out
	flyout.addEventListener('focusout', () => {
		// delay the changing of attribute to check if focus shifted within the submenu or outside
		setTimeout(function () {
			if (!flyout.contains(document.activeElement)) {
				openFlyoutBtn.setAttribute('aria-expanded', 'false');
				mobileNavWrapper.classList.remove('open');
			}
		}, 0);
	});
</script>

<style lang='less' is:global>
	@import '../../styles/variables.less';
	/* general styles */
	header {
		width: 100%;
		height: var(--headerH);
		--accentC: var(--accentC1);
		.skip-link {
			position: fixed;
			width: max-content;
			padding: 10px 15px;
			background-color: var(--primaryC);
			outline: 2px solid var(--accentC2);
			color: var(--accentC2);
			border-radius: var(--bdRadius2);
			margin: 10px;
			box-shadow: var(--shadow1);
			font-weight: 500;
			transition: 0.2s ease;
			&:focus {
			}
			&:hover,
			&:focus {
				background-color: var(--accentC2);
				color: var(--primaryC);
			}
		}
		.nav-wrapper {
			position: fixed;
			top: 0;
			left: 0;
			right: 0;
			margin: 0 auto;
			max-width: 1400px;
			width: 100%;
			background-color: var(--primaryC);
			z-index: 1000;
			border-bottom: 2px solid transparent;
			transition: border-bottom 0.2s ease;
			nav {
				ul {
					list-style: none;
					padding: 0;
					margin: 0;
				}
				a,
				.submenu-btn {
					font-size: 1.2em;
					font-weight: 500;
					text-decoration: none;
					color: var(--accentC);
					background-color: transparent;
					border: none;
					cursor: pointer;
				}
			}
		}
	}
	/* sticky header & auto hide */
	header {
		&.scrolling {
			.nav-wrapper {
				border-bottom: 2px solid var(--darkTint);
				@media @s-d {
					padding: 10px 60px;
					nav {
						.nav-list {
							.h-logo {
								img {
									width: 80px;
									transition: 0.3s ease;
								}
							}
						}
					}
				}
				@media @s-t {
					padding: 10px 60px;
				}
				@media @s-m {
					padding: 10px 30px;
				}
			}
		}
		&.auto-hide {
			.nav-wrapper {
				transform: translateY(0);
			}
		}
		&.auto-hide.down {
			.nav-wrapper:not(:hover):not(:focus-within):not(.open) {
				transform: translateY(calc(-1 * var(--headerH)));
				transition: transform 0.5s ease 2s;
			}
		}
		&.auto-hide.up {
			.nav-wrapper {
				transform: translateY(0);
				transition: transform 0.5s ease 0s;
			}
		}
	}
	/* responsive visibility */
	@media @s-d {
		header {
			.nav-wrapper.mobile {
				display: none;
			}
		}
	}
	@media @s-nd {
		header {
			.nav-wrapper.desktop {
				display: none;
			}
		}
	}
	/* desktop styling */
	@media @s-d {
		header {
			--headerH: 150px;
			.nav-wrapper {
				padding: 25px 60px;
				transition: padding 0.3s ease;
				nav {
					width: 100%;
					display: flex;
					flex-direction: row;
					align-items: center;
					justify-content: center;
					.nav-list {
						display: flex;
						align-items: center;
						justify-content: center;
						max-width: 900px;
						width: 100%;
						li.h-logo {
							margin: 0 30px;
							width: 120px;
							a {
								display: block;
								img {
									display: block;
									width: 120px;
									margin: 0 auto;
									transition: 0.3s ease;
								}
							}
						}
						> li:not(.h-logo) {
							> .submenu-btn {
								display: block;
								padding: 15px 0;
							}
						}
						// pseudo element for decorative flower
						> li:first-child,
						> li:nth-child(4) {
							margin-right: 76px;
							position: relative;
							&:after {
								pointer-events: none;
								position: absolute;
								content: '';
								width: 16px;
								height: 16px;
								right: -46px;
								background-image: url(/images/decor/flower.png);
								background-size: contain;
								filter: var(--accentC3Filter);
								top: 0;
								bottom: 0;
								margin: auto 0;
							}
						}
						// submenu styling
						> li.has-submenu {
							position: relative;
							> ul.submenu {
								display: none;
								position: absolute;
								max-width: 240px;
								width: max-content;
								background-color: var(--primaryC);
								z-index: 1000;
								border-radius: var(--bdRadius2);
								overflow: hidden;
								box-shadow: var(--shadow1);
								font-size: 0.9em;
								> li {
									> a {
										padding: 12px 12px;
										width: 100%;
										display: block;
										&:hover,
										&:focus {
											background-color: var(--darkTint);
										}
									}
								}
							}
							// reveal submenu on hover or focus
							&:hover,
							&.open {
								> ul.submenu {
									display: block;
								}
							}
						}
					}
				}
			}
		}
	}
	/* mobile styling */
	@media @s-nd {
		header {
			--headerH: 100px;
			.nav-wrapper {
				width: 100%;
				display: flex;
				flex-direction: row;
				align-items: center;
				justify-content: space-between;
				transition: padding 0.3s ease;
				@media @s-t {
					padding: 25px 60px;
				}
				@media @s-m {
					padding: 25px 30px;
				}
				.h-logo {
					a {
						img {
							display: block;
							width: 60px;
						}
					}
				}
				.open-flyout {
					position: relative;
					width: 30px;
					height: 25.5px;
					img {
						position: absolute;
						left: 0;
						top: 0;
						width: 30px;
						height: 25.5px;
						&:first-child {
							filter: var(--accentC1Filter);
						}
						&:last-child {
							filter: var(--accentC3Filter);
						}
					}
				}
				.open-flyout,
				.close-flyout {
					background-color: transparent;
					border: none;
					padding: 0;
					cursor: pointer;
					font-size: 30px;
					color: var(--accentC);
				}
				#flyout {
					position: fixed;
					width: 100vw;
					height: 100vh;
					top: 0;
					left: 0;
					background-color: var(--primaryC);
					overflow-y: auto;
					overflow-x: hidden;
					transform: translateX(110vw);
					transition:
						transform 0.3s ease-out,
						visibility 0s ease 0.3s;
					visibility: hidden;
					.close-flyout {
						margin: 30px;
						position: absolute;
						top: 0;
						right: 0;
					}
					nav {
						background-color: var(--primaryC);
						margin: 100px 25px;
						.nav-list {
							li.has-submenu {
								border-bottom: 2px solid var(--darkTint);
								.submenu-btn {
									width: 100%;
									height: 100%;
									text-align: left;
									position: relative;
									padding: 12px 36px 12px 12px;
									border-radius: var(--bdRadius2);
									&::after {
										position: absolute;
										content: '⏷';
										right: 12px;
										top: 0;
										height: 100%;
										font-size: 25px;
										display: flex;
										align-items: center;
									}
								}
								ul.submenu {
									display: none;
								}
								&.open {
									background-color: var(--darkTint);
									border-radius: var(--bdRadius)
										var(--bdRadius) 0 0;
									.submenu-btn {
										background-color: var(--accentC);
										color: var(--textC2);
										&::after {
											transform: scaleY(-1)
												translateY(2px);
										}
									}
									ul.submenu {
										display: block;
										li.menu-item {
											a {
												display: block;
												padding: 12px;
											}
										}
									}
								}
							}
						}
					}
				}
				.flyout_cranes {
					width: 100%;
					transform: translateY(10px);
					display: none;
				}
				&.open {
					#flyout {
						visibility: visible;
						transform: translateX(0);
						transition:
							transform 0.2s ease-out,
							visibility 0s ease 0s;

						.flyout_cranes {
							display: block;
						}
					}
				}
			}
		}
	}
</style>
