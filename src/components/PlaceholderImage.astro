---
export interface Props {
	class?: string;
}

const { class: className } = Astro.props;
---

<div class:list={['placeholder', className]}>
	<img
		src='/images/components/placeholder_1.png'
		alt=''
		role='presentation'
	/>
</div>

<style lang='less'>
	.placeholder {
		background-color: var(--primaryC);
		img {
			width: 100%;
			height: 100%;
			object-fit: cover;
			filter: var(--secondaryFilter);
		}
		&.invert {
			background-color: var(--accentC2);
			img {
				filter: var(--primaryFilter);
			}
		}
	}
</style>
